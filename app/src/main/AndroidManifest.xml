<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.zqy.shapedemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/BaseTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".LineActivity"
            android:label="线"
            android:screenOrientation="portrait"
            android:theme="@style/BaseTheme"/>
        <activity
            android:name=".RectActivity"
            android:label="矩形"
            android:screenOrientation="portrait"
            android:theme="@style/BaseTheme"/>

        <activity
            android:name=".RoundActivity"
            android:label="圆形矩形"
            android:screenOrientation="portrait"
            android:theme="@style/BaseTheme"/>

        <activity
            android:name=".LayerActivity"
            android:label="矩形-layer实现"
            android:screenOrientation="portrait"
            android:theme="@style/BaseTheme"/>

        <activity
            android:name=".GradientActivity"
            android:label="渐变"
            android:screenOrientation="portrait"
            android:theme="@style/BaseTheme"/>

        <activity
            android:name=".CircleActivity"
            android:label="圆"
            android:screenOrientation="portrait"
            android:theme="@style/BaseTheme"/>

        <activity
            android:name=".OvalActivity"
            android:label="椭圆"
            android:screenOrientation="portrait"
            android:theme="@style/BaseTheme"/>

        <activity
            android:name=".RingActivity"
            android:label="圆环"
            android:screenOrientation="portrait"
            android:theme="@style/BaseTheme"/>

    </application>

</manifest>